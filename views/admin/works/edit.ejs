    <li class="active"><a href="/admin/works">Works Management</a></li>
    <li class="active">Update Works</li>
</ul>
<!-- Liste des utilisateurs -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 card">
      <% if(notification!=undefined){%>
        <div class="alert alert-danger alert-dismissable">
          <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
            <%= notification %>
        </div>
      <%}; %>
       <div class="row" style="margin-top:50px;background:#FFF;padding-top:100px;padding-bottom:50px;">
         <div class="col-sm-12">
           <h4>EDIT WORK</h4>
           <hr>
         </div>
         <div class="col-sm-8">
           <form method="post" action="/admin/works/update/<%= data._id %>">
             <input type="hidden" name="id" value="<%= data._id %>">
             <div class="form-group">
               <input type="text" class="form-control" name="client"  value="<%= data.client %>" />
             </div>

             <div class="form-group">
               <textarea name="content" class="form-control" rows="8" cols="80" required><%= data.description %></textarea>
             </div>

             <div class="form-group">
               <button type="submit" class="btn btn-default btn-lg btn-block">Modifier</button>
             </div>

           </form>
